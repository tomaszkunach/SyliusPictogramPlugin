{% from '@SyliusAdmin/shared/helper/icon.html.twig' import icon %}

<form class="asdoria-update-pictogram-groups"
      action="{{ path('asdoria_admin_ajax_pictogram_groups_update_position') }}"
      method="post"
      data-csrf-token="{{ csrf_token('update-pictogram-group-position') }}"
>
    <button class="btn" type="submit">
        {{ icon({ icon: action.icon|default('pencil'), class: 'icon icon-tabler' }) }}
        {{ 'sylius.ui.save_positions'|trans }}
    </button>
</form>
